<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipsHackathon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1982FF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <!--Changing application font-->
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.TipsApplication.DefaultTextAppearance" parent="Theme.MaterialComponents.Light">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.TipsApplication.ButtonTextAppearance" parent="TextAppearance.TipsApplication.DefaultTextAppearance">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.TipsApplication.WooppayTipsLabelTextAppearance" parent="TextAppearance.TipsApplication.DefaultTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.TipsApplication.RegistrationLabelTextAppearance" parent="TextAppearance.TipsApplication.DefaultTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ShapeAppearance.TipsApplication.CardShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>